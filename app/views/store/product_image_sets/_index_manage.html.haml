%turbo-frame{id: "content", data:{controller: "bootstrap", turbo:{action: "advance"}}}
	.row.bg-dark.text-light
		.d-flex
			.p-2
				%a.btn.btn-dark.btn-lg.text-light.border.border-light{href: product_path(product, manage: true), data:{turbo:{frame: "content"}, bs:{toggle: "tooltip", placement: "bottom", title: "Back to #{product.name}"}}, aria:{label: "Back to #{product.name}"}}
					%i.bi.bi-arrow-left-circle-fill{aria:{hidden: "true"}}
			.flex-grow-1.p-2
				%h2 Image Sets
			.p-2
				%a.btn.btn-dark.btn-lg.text-light.border.border-light{href: new_product_image_set_path(product: product.id, manage: true), data:{turbo:{frame: "new_image_set"}, bs:{toggle: "tooltip", placement: "bottom", title: "New Image Set"}}, aria:{label: "New Image Set"}}
					%i.bi.bi-plus{aria:{hidden: "true"}}
	
	.container.p-4
		%turbo-frame{id: "new_image_set", data:{turbo:{action: "advance"}}}
		= render partial: "store/product_image_sets/image_sets", locals: {image_sets: image_sets, product: product}