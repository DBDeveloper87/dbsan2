= form_with(model: product) do |f|
	.p-4
		.form-floating.mb-4
			= f.text_field :name, placeholder: "Product Name", class: "form-control border border-dark"
			= f.label :name, "Product Name"

		.form-floating.mb-4
			= f.text_area :description, class: "border border-dark form-control", data:{controller: "textarea-autogrow"}, placeholder: "Product Description"
			= f.label :description, "Product Description"

		.container
			= f.hidden_field :product_category_id, value: category.id
		- if form_action == "new"
			= render 'form_new_btn', f: f