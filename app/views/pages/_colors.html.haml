:css
	:root {
		--bs-border-color: #525a62;
	}

	.braille-page {
		aspect-ratio: 11.5 / 11;
		height: 11in;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		font-size: 100%;
		transform: scale(var(--zoom-level)); 
		transform-origin: top center;"	
	}

	.braille-line, 
	.braille-line-bold {
		display: grid;
		grid-template-columns: repeat(40, 1fr); /* Exactly 40 equal-width columns */
		white-space: nowrap; /* Ensures the line never wraps */
		overflow: hidden; /* Prevents accidental line breaks */
		width: 100%; /* Ensures it stretches correctly */
		height: auto; /* Adjusts to content height */
		font-size: 180%;
		line-height: 1.15;
		font-family: monospace;
		font-variant-numeric: tabular-nums; /* Ensures equal spacing */
	}

	.braille-line-grid {
		display: grid;
		grid-template-columns: repeat(40, 1fr); /* 40 equal-width columns */
		grid-auto-flow: column; /* Forces content to align in columns */
		white-space: nowrap; /* Prevents unintended wrapping */
		overflow: hidden; /* Ensures no line breaks */
		width: 100%;
		font-size: 180%;
		line-height: 1.15;
		font-family: monospace;
		font-variant-numeric: tabular-nums; /* Uniform spacing */
		text-align: center; /* Ensures each character is centered */
		letter-spacing: 0.05em; /* Adjust as needed to space out characters */
	}

	.braille-line span {
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		width: 100%; /* Takes up the full grid cell */
		height: 100%; /* Ensures proper alignment */
	}

