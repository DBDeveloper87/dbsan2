.container.mt-2
	%h2 Edit Country

	= form_with(model: [:admin, @country]) do |f|
		.form-floating.mb-4
			= f.text_field :name, placeholder: "Country / Region Name", class: "form-control border border-dark"
			= f.label :name, "Country / Region Name"

		.form-floating.mb-4
			= f.text_field :unicode_flag, placeholder: "Unicode Flag", class: "form-control border border-dark"
			= f.label :unicode_flag, "Unicode Flag"

		.form-floating.mb-4
			= f.text_field :country_code, placeholder: "ISO Code", class: "form-control border border-dark"
			= f.label :country_code, "ISO Code"

		.row
			= f.submit "Save", class: "btn btn-primary"