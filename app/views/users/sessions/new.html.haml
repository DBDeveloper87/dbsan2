.container.mt-4
  .col-md-4.mx-auto
    %h1.text-center Login
    %p #{notice}
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      
      .input-group.flex-nowrap.mb-4
        .input-group-text.bg-dark
          %i.text-light.bi.bi-envelope{aria:{hidden: "true"}}
        .form-floating.flex-grow-1
          = f.label :email, "Email Address", class: "visually-hidden"
          = f.email_field :email, placeholder: "Email Address", class: "form-control border border-dark"
          %label{for: "email", aria:{hidden: "true"}} Email Address
          
      .mb-4
        .input-group
          .input-group-text.bg-dark
            %i.text-light.bi.bi-key{aria:{hidden: "true"}}
          .form-floating.flex-grow-1
            = f.password_field :password, placeholder: "Password", class: "form-control border border-dark"
            %label{for: "password", aria:{hidden: "true"}} Password
        .text-end #{link_to "Forgot password?", new_password_path(resource_name)}
      
      - if devise_mapping.rememberable?
        .d-grid.d-block.mb-4
            
          = f.check_box :remember_me, class: "btn-check", role: "switch"
          = f.label :remember_me, "Remember me", class: "btn btn-lg btn-outline-dark text-start"
          
      .row.mb-4
        = button_tag(class: "btn btn-primary btn-lg") do
          %i.bi.bi-box-arrow-in-right{aria:{hidden: "true"}}
          %span Login
        .text-center Don't have an account yet?  #{link_to "Create account", new_user_registration_path}.
