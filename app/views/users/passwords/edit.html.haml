.container.mt-4
  .col-md-4.mx-auto
    %h1.text-center Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { turbo: false }}) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      
      .mb-4
        .input-group
          .input-group-text.bg-dark
            %i.bi.bi-key.text-light
          .form-floating.flex-grow-1
            = f.password_field :password, placeholder: "New Password", class: "form-control border border-dark"
            = f.label :password, "New Password"
        - if @minimum_password_length
          .text-end.text-muted Minimun #{@minimum_password_length} characters
              
      .mb-4
        .input-group
          .input-group-text.bg-dark
            %i.bi.bi-key.text-light
          .form-floating.flex-grow-1
            = f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "form-control border border-dark"
            = f.label :password_confirmation, "Confirm New Password"
            
      .row
        = f.submit "Change my password", class: "btn btn-primary btn-lg"
