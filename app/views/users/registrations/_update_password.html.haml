= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f|
  .modal-body.pt-4
    = render "devise/shared/error_messages", resource: resource
      
    .mb-4
      .input-group
        .input-group-text.bg-dark
          %i.bi.bi-key.text-light
        .form-floating.flex-grow-1
          = f.password_field :password, placeholder: "New Password", class: "form-control border border-dark"
          = f.label :password, "New Password"
      - if @minimum_password_length
        .text-end.text-muted Minimun #{@minimum_password_length} characters
      
    .mb-4
      .input-group
        .input-group-text.bg-dark
          %i.bi.bi-key.text-light
        .form-floating.flex-grow-1
          = f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "form-control border border-dark"
          = f.label :password_confirmation, "Confirm New Password"
            
    .mb-4
      %p We need your current password to confirm your changes.
      .input-group
        .input-group-text.bg-dark
          %i.bi.bi-key.text-light
        .form-floating.flex-grow-1
          = f.password_field :current_password, placeholder: "Current Password", class: "form-control border border-dark"
          = f.label :current_password, "Current Password"  
        
  .modal-footer.d-block
    .row
      = f.submit "Update", class: "btn btn-primary btn-lg"
    
    