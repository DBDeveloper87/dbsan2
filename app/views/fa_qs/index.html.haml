.col-12.col-md-4.mx-auto.pt-4
	%h1 FAQs
	= link_to "New", new_challenge_faq_path(@challenge)
	
	#faqs.accordion
		- @faqs.each do |q|
			- if q.group_number == 0
				.accordion-item
					%h2#faqIntro.accordion-header 
						%button.accordion-button{type: "button", data:{bs:{toggle: "collapse",  target: "#collapseIntro"}}, aria:{expanded: "true", controls: "collapseIntro"}} #{q.question_group}
					#collapseIntro.accordion-collapse.collapse.show{aria:{labelledby: "faqIntro"}, data:{bs:{parent: "#faqs"}}}
						= q.answer.html_safe

	- @groups.each_with_index do |g, i|
		%h2 #{g[:group]}
		- @faqs.each do |q|
			- if i + 1 == q.group_number
				.ms-4.mb-4
					%h3 #{q.question}
					= q.answer.html_safe
