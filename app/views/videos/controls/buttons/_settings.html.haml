.p-2
	%span{data: {bs: {toggle: "modal", target: "#videoSettings"}}}
		%button#settingsButton.btn.btn-lg.btn-dark.border.border-light{type: "button", title: "Settings (s)", aria: {controls: "#settingsMenu", expanded: "false"}, data: { bs:{toggle: "tooltip", title: "Settings (s)", placement: "top"}, video: {container: {target: "settingsButton"}}}}
			%i.bi.bi-gear-fill{aria: {hidden: "true"}}
	
	#videoSettings.modal{tabindex: "-1"}
		.modal-dialog
			%turbo-frame{id: "settingsMenu"}
				.modal-content
					.modal-header
						%h3.modal-title.text-dark Video Settings
						%button.btn-close{type: "button", aria: {label: "Close"}, data: {bs: {dismiss: "modal"}}}
					.model-body.text-dark.p-4
						= render partial: "videos/controls/settings_menu/main", locals: {video: video}
