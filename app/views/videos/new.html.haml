%turbo-frame{id: "upload_button", data:{controller: "uploads", uploads_target: "uploadButtonFrame", uploads_file_field: "file_field_1", uploads_for: "video"}}
	.row.h-100{style: "background: #bfbfbf"}
		.align-self-center.text-center
			%p Please upload a video by clicking the button below.
			.image-upload
				%label.btn.btn-dark.btn-lg.text-light{for: "file_field_1"} Upload Video
				%input{id: "file_field_1", type: "file", multiple: "true", data:{action: "change->uploads#createRecords", direct_upload_url: rails_direct_uploads_url }}
	.d-none
		= form_with(model: @upload, url: uploads_path) do |f|
			= f.hidden_field :file_list, data:{uploads_target: "file_list"}
			= f.hidden_field :for, data:{uploads_target: "for"}
			= f.hidden_field :for_id, value: @channel.id, data:{uploads_target: "for_id"}
			= f.hidden_field :input_id, data:{uploads_target: "inputId"}
			= f.submit "create", data:{uploads_target: "submit"}


%turbo-frame{id: "content", data:{turbo:{action: "advance"}}}

